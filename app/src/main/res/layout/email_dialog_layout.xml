<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/profileBgColor"
        android:orientation="vertical"
        android:paddingBottom="@dimen/contentTopMargin"
        android:paddingLeft="@dimen/pageMargin"
        android:paddingRight="@dimen/pageMargin"
        android:paddingTop="@dimen/contentBottomMargin">

        <TextView
            style="@style/profile_lable_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="@dimen/lableTopPadding"
            android:paddingBottom="@dimen/lableTopPadding"
            android:text="Email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_edittext_bg"
            android:padding="8dp">

            <EditText
                android:id="@+id/etEmail"
                style="@style/profile_textview_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:inputType="textEmailAddress"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogButtonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:padding="16dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/radical_red"
            android:textSize="@dimen/dialog_button_font_size" />

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"

            android:background="@drawable/button_bg"
            android:padding="16dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="@dimen/dialog_button_font_size" />
    </LinearLayout>


</LinearLayout>